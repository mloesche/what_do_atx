# ===========================================
# WHAT DO ATX - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ===========================================
# CORE APPLICATION
# ===========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ===========================================
# DATABASE (Render Managed Postgres)
# ===========================================
DATABASE_URL="postgresql://username:password@host:port/database"
POSTGRES_HOST="your-render-postgres-host"
POSTGRES_PORT="5432"
POSTGRES_DB="what_do_atx"
POSTGRES_USER="your-postgres-user"
POSTGRES_PASSWORD="your-postgres-password"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRY="7d"

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Session encryption key
SESSION_SECRET="your-session-encryption-key"

# ===========================================
# GOOGLE OAUTH & SERVICES
# ===========================================
# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Google Calendar API (for free/busy integration)
GOOGLE_CALENDAR_API_KEY="your-google-calendar-api-key"

# ===========================================
# AI & ML SERVICES
# ===========================================
# OpenAI API (for embeddings and GPT-4o chat)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"
OPENAI_ORG_ID="your-openai-org-id"

# AI Model Configuration
EMBEDDING_MODEL="text-embedding-3-small"
CHAT_MODEL="gpt-4o"

# ===========================================
# EXTERNAL EVENT SOURCES
# ===========================================
# Eventbrite API
EVENTBRITE_API_KEY="your-eventbrite-api-key"
EVENTBRITE_ORG_ID="your-eventbrite-org-id"

# Do512 Scraping (if API available)
DO512_API_KEY="your-do512-api-key"

# ===========================================
# INFRASTRUCTURE & DEPLOYMENT
# ===========================================
# Vercel Configuration
VERCEL_URL=""  # Automatically set by Vercel
VERCEL_ENV=""  # Automatically set by Vercel

# Render Configuration
RENDER_SERVICE_URL="https://your-render-service.onrender.com"
RENDER_INTERNAL_URL="http://your-render-service:10000"

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,https://your-vercel-app.vercel.app"

# ===========================================
# REDIS CACHE (Optional - Render Redis)
# ===========================================
REDIS_URL="redis://username:password@host:port"
REDIS_TTL="3600"

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn-here"
SENTRY_ENV="development"

# Log Level
LOG_LEVEL="info"

# ===========================================
# TASKMASTER AI (Existing)
# ===========================================
# AI API Keys for Taskmaster functionality
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"
PERPLEXITY_API_KEY="pplx-your-key-here"
MISTRAL_API_KEY="your-mistral-key-here"
XAI_API_KEY="your-xai-key-here"
AZURE_OPENAI_API_KEY="your-azure-key-here"
OLLAMA_API_KEY="your-ollama-api-key-here"
GITHUB_API_KEY="ghp-your-github-key-here"

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
ENABLE_CALENDAR_INTEGRATION="true"
ENABLE_AI_CHAT="true"
ENABLE_EVENT_SCRAPING="true"
ENABLE_RECOMMENDATIONS="true"